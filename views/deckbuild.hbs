<!DOCTYPE html>
<html>
    {{> header}}

<style>
    body {
        background-color: black
    }
    #wrapper {
  width: 100%;
  height: 100px;
  display: flex;
  align-items: center;
  justify-content: center;
}
    div.deck {
  background-color: lightblue;
  width: 400px;
  height: 700px;
  overflow: scroll;
  float: left;
}

</style>
<script>


    var deck = {
        hero: "",
        cards: []
    }
    
    function addCard(key) {
        if (deck.cards.length < 25) {
            deck.cards.push(`${key}`)
        }
        document.getElementById("cards").innerHTML = deck.cards.join(`\n`)
    }

    function removeCard(key) {
        if (deck.cards.includes(`${key}`)) {
            deck.cards.splice(deck.cards.lastIndexOf(`${key}`), 1)
        }
        document.getElementById("cards").innerHTML = deck.cards.join(`\n`)
    }

    function changeHero(key) {
        deck.hero = `${key}`;
        document.getElementById("hero").innerHTML =
        `Your Hero is: ${heroes[deck.hero].name}`;
        document.getElementById("heroDesc").innerHTML = `${heroes[deck.hero].desc}`
    }

    function test() {
        console.log(deck)
    }

</script>

<body>

    <br>
    <h1 style="color:white; display:">Pick your cards</h1>
    <h1 style="color:white; text-align:center">Select your Hero</h1>
    <h1 style="color:white; text-align:right" id="hero">Choose a Hero !</h1>
    <br>
    <div id="wrapper">
        {{{generateHeroes heroes}}}
        <p id="heroDesc" style="text-align:right"></p>
    </div>

    <h1 style="text-align: right; color:white">Your Current Deck !</h1><br>
    <button type="button" style="float: right" onclick="test()">Confirm Deck?</button><br>

    <br>
    <div class="deck">
        {{{generateDeckCards cardKeys}}}
    </div>
<div style="background-color:lightblue;height:600px;width:300px;overflow:scroll;padding:50px;float:right;" id="cards"></div>
</body>


</html>